@charset "utf-8";
/* CSS Document */
#topHeadermenu {
  margin: auto;
    width: 660px;
}
#topHeadermenu > ul{
  list-style: none;
  margin: 0;
  padding: 0;
  line-height: 1;
  display: block;
  zoom: 1;
  border-bottom:1px solid #242424;
}

#topHeadermenu > ul ul {
  list-style: none;
  margin: 0;
  padding: 0;
  line-height: 1;
  display: block;
  zoom: 1;
}

#topHeadermenu ul:after,#topHeadermenu > ul ul:after {
  content: ' ';
  display: block;
  font-size: 0;
  height: 0;
  clear:both;
  visibility: hidden;
}
#topHeadermenu ul li,#topHeadermenu > ul ul li {
  float: left;
  display: block;
  padding: 0;
}
#topHeadermenu ul li a ,#topHeadermenu > ul ul li a{
  color: #999999;
  text-decoration: none;
  display: block;
  padding: 15px 20px;  
  font-weight: bold;
  text-transform: uppercase;
  font-size: 12px;
  position: relative;
  -webkit-transition: color .50s;
  -moz-transition: color .50s;
  -ms-transition: color .50s;
  -o-transition: color .50s;
  transition: color .50s;
}
#topHeadermenu ul li a:hover, #topHeadermenu > ul ul li a:hover {
  color: #FFFFFF;
}
#topHeadermenu ul li a:hover:before,#topHeadermenu > ul ul li a:hover:before {
  width: 100%;
}
#topHeadermenu ul li a:after,#topHeadermenu > ul ul li a:after {
  content: '';
  display: block;
  position: absolute;
  right: -3px;
  top: 18px;
  height: 6px;
  width: 6px;
  background: #5E9DE4;
  opacity: .8;
}
#topHeadermenu ul li a:before, #topHeadermenu > ul ul li a:before {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  bottom: 0;
  height: 2px;
  width: 0;
  background: #5E9DE4;
  -webkit-transition: width .25s;
  -moz-transition: width .25s;
  -ms-transition: width .25s;
  -o-transition: width .25s;
  transition: width .25s;
}
#topHeadermenu ul li.last > a:after,
#topHeadermenu ul li:last-child > a:after,
#topHeadermenu > ul ul li.last > a:after,
#topHeadermenu > ul ul li:last-child > a:after
 {
  display: none;
}
#topHeadermenu ul li.active a,
#topHeadermenu > ul ul li.active a {
  color: #999999;
}
#topHeadermenu ul li.active a:before,
#topHeadermenu > ul ul li.active a:before {
  width: 100%;
}

/*sunmenu*/
#topHeadermenu > ul ul {
  visibility: hidden;
  position: absolute;
  top: 100%;
  left: 240px;
  z-index: 598;
}
#topHeadermenu > ul ul li {
  float: none;
}
#topHeadermenu > ul li:hover > ul {
  visibility: visible;
}


#topHeadermenu ul > li > ul > li {
  margin: 0 10px 0 0;
  position: relative;
  padding: 0;
  float: left;
}







@media screen and (max-width: 768px) {
  #topHeadermenu ul li {
    float: none;
  }
  #topHeadermenu ul li a {
    width: 100%;
    -moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
  }
  #topHeadermenu ul li a:after {
    display: none;
  }
  #topHeadermenu ul li a:before {
    height: 1px;
    background: #000000;
    width: 100%;
    opacity: .2;
  }
  #topHeadermenu ul li.last > a:before,
  #topHeadermenu ul li:last-child > a:before {
    display: none;
  }
}
